<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Login</title>
  <link rel="stylesheet" href="../output.css">
</head>
<body class="bg-gray-50 flex flex-col items-center justify-center min-h-screen">
  
  <%- include('../partials/header') %>

  <div class="w-full max-w-md p-6">
    <form action="/admin/login" method="POST" class="bg-white p-6 rounded shadow-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Admin Login</h1>

      <% if (typeof error !== 'undefined') { %>
        <p class="text-red-600 mb-4 text-center"><%= error %></p>
      <% } %>

      <input type="text" name="username" placeholder="Username" class="w-full p-3 mb-4 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required>
      <input type="password" name="password" placeholder="Password" class="w-full p-3 mb-6 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required>

      <button type="submit" class="w-full bg-blue-600 text-white p-3 rounded hover:bg-blue-700 transition-colors">Login</button>
    </form>
  </div>

  <%- include('../partials/footer') %>

</body>
</html>
